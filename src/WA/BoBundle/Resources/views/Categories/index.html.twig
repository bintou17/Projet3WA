{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Categories list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Parentid</th>
                <th>Position</th>
                <th>Lft</th>
                <th>Lvl</th>
                <th>Rgt</th>
                <th>Root</th>
                <th>Datecreated</th>
                <th>Dateupdated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.parentId }}</td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.lft }}</td>
                <td>{{ entity.lvl }}</td>
                <td>{{ entity.rgt }}</td>
                <td>{{ entity.root }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateUpdated %}{{ entity.dateUpdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('categories_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('categories_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('categories_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
